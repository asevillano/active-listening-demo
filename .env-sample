# AI Speech Service Configuration
SPEECH_KEY=<YOUR-SPEECH-KEY>
SPEECH_REGION=<YOUR-SPEECH-REGION>
STT_LOCAL_URL=ws://localhost:5000
TTS_LOCAL_URL=ws://localhost:5000

# AI Language Service Configuration
AI_SERVICE_ENDPOINT=https://<YOUR-AI-SERVICE-ENDPOINT>
AI_SERVICE_KEY=<YOUR-AI-SERVICE-KEY>
AI_LOCAL_URL=http://localhost:5000

# AI Agents Configuration
PROJECT_ENDPOINT=https://<YOUR-AI-FOUNDRY-SERVICE-NAME>.services.ai.azure.com/api/projects/<YOUR-PROJECT-NAME>
AGENT_ID=<YOUR-AGENT-ID>

# Azure AI Search and Knowledge Base Configuration (for active-listening-app-kb.py)
# Uses direct Knowledge Base API (Foundry IQ) without agents
AZURE_SEARCH_ENDPOINT=https://<YOUR-SEARCH-SERVICE-NAME>.search.windows.net
AZURE_SEARCH_API_KEY=<YOUR-SEARCH-API-KEY>
KNOWLEDGE_BASE_NAME=<YOUR-KNOWLEDGE-BASE-NAME>

# Show browser microphone option
BROWSER_MICRO=true

# Docker Services Configuration
DOCKER_STT=true
DOCKER_TTS=true
DOCKER_AI=true

# Speech and Text Languages
SPEECH_LANGUAGE=en-US
#SPEECH_LANGUAGE=tr-TR
TEXT_LANGUAGE=en
#TEXT_LANGUAGE=tr

# Text-to-Speech voice for agent responses
TTS_VOICE=en-US-JennyNeural
#TTS_VOICE=en-US-GuyNeural
#TTS_VOICE=es-ES-ElviraNeural
#TTS_VOICE=tr-TR-EmelNeural
#TTS_VOICE=tr-TR-AhmetNeural

# GPT-4o-mini-transcribe configuration
AZURE_OPENAI_ENDPOINT=<YOUR-AOAI-SERVICE-ENDPOINT>
AZURE_OPENAI_API_KEY=<YOUR-AI-SERVICE-KEY>
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini-transcribe
AZURE_OPENAI_DEPLOYMENT_FOR_SUMMARY=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2025-04-01-preview